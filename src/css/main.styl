body
    background white
    width: 100vw
    height 100vh
    box-sizing border-box

svg
    // height 100%
    // width 100%


#morph
    fill: red
    width 100%
    height 100%
    top 0
    left 0
    position absolute
    pointer-events none
    z-index 1
    h1 {
        font-size: 1.4em
        margin 10px 0
        cursor pointer
    }

.butt
    display flex
    align-items center
    justify-content center
    box-shadow 0 0 2px 1px rgba(0,0,0,0.2)
    border-radius 2px
    width 100px
    height 100px
    background: darksalmon
    position relative
    
    margin 50vh auto
    z-index 2
    font-size 26px
    text-transform capitalize
    font-family Arial
    &:hover {
        box-shadow 0 2px 2px 3px rgba(0,0,0,0.3)
    }
